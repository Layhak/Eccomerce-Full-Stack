@model Eccomerce_Full_Stack.Models.Category

@{
ViewData["Title"] = "Delete";
Layout = "_AdminLayout";
}
<div class="min-h-[80vh]">

<h1 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">Delete</h1>

<h3 class="text-lg font-semibold mb-4 text-gray-800 dark:text-gray-200">Are you sure you want to delete this?</h3>

<div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 mb-6">
    <h4 class="text-xl font-semibold mb-4 text-gray-900 dark:text-gray-100">Category</h4>
    <hr class="mb-4 border-gray-300 dark:border-gray-600" />
    <dl class="grid grid-cols-1 gap-4">
        <div class="flex">
            <dt class="font-medium text-gray-700 dark:text-gray-300 w-1/3">Category Name</dt>
            <dd class="text-gray-900 dark:text-gray-100 w-2/3">@Html.DisplayFor(model => model.CategoryName)</dd>
        </div>
    </dl>
</div>

<form asp-action="Delete" class="mt-6">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="inline-block bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mr-2">Delete</button>
    <a asp-action="Index" class="inline-block bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-100 font-bold py-2 px-4 rounded">Back to List</a>
</form>
</div>
