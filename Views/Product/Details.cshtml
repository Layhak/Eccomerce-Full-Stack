@model Eccomerce_Full_Stack.Models.Product

@{
ViewData["Title"] = "Details";
Layout = "_AdminLayout";
}

<h1 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">Details</h1>

<div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6">
    <h4 class="text-xl font-semibold mb-4 text-gray-900 dark:text-gray-100">Product</h4>
    <hr class="mb-4 border-gray-300 dark:border-gray-600" />
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="flex">
            <dt class="font-medium text-gray-700 dark:text-gray-300 w-1/3">Product Name</dt>
            <dd class="text-gray-900 dark:text-gray-100 w-2/3">@Html.DisplayFor(model => model.ProductName)</dd>
        </div>
        <div class="flex">
            <dt class="font-medium text-gray-700 dark:text-gray-300 w-1/3">Description</dt>
            <dd class="text-gray-900 dark:text-gray-100 w-2/3">@Html.DisplayFor(model => model.Description)</dd>
        </div>
        <div class="flex">
            <dt class="font-medium text-gray-700 dark:text-gray-300 w-1/3">Store ID</dt>
            <dd class="text-gray-900 dark:text-gray-100 w-2/3">@Html.DisplayFor(model => model.StoreId)</dd>
        </div>
        <div class="flex">
            <dt class="font-medium text-gray-700 dark:text-gray-300 w-1/3">Price</dt>
            <dd class="text-gray-900 dark:text-gray-100 w-2/3">@Html.DisplayFor(model => model.Price)</dd>
        </div>
        <div class="flex">
            <dt class="font-medium text-gray-700 dark:text-gray-300 w-1/3">Quantity</dt>
            <dd class="text-gray-900 dark:text-gray-100 w-2/3">@Html.DisplayFor(model => model.Quantity)</dd>
        </div>

        <div class="flex">
            <dt class="font-medium text-gray-700 dark:text-gray-300 w-1/3">Category</dt>
            <dd class="text-gray-900 dark:text-gray-100 w-2/3">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
        </div>

        <div class="flex">
            <dt class="font-medium text-gray-700 dark:text-gray-300 w-1/3">Image</dt>
            <dd class="w-2/3">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                <div class="w-40 h-40 overflow-hidden rounded-lg border border-gray-300 dark:border-gray-600">
                    <img src="@Url.Content("~/uploads/" + Model.Image)" alt="Product Image" class="w-full h-full object-cover" />
                </div>
                }
                else
                {
                <span class="text-gray-500 dark:text-gray-400">No image available</span>
                }
            </dd>
        </div>
    </dl>
</div>

<div class="mt-6">
    <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2">Edit</a>
    <a asp-action="Index" class="inline-block bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-100 font-bold py-2 px-4 rounded">Back to List</a>
</div>
