@model Eccomerce_Full_Stack.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_AdminLayout";
    const string label_class = "block mb-2 text-sm font-medium text-gray-900 dark:text-white";
    const string input_class = "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500";
}

<h1>Register</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="@label_class"></label>
                <input asp-for="FirstName" class="@input_class" />
                <span asp-validation-for="FirstName" class="text-red-500"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="@label_class"></label>
                <input asp-for="LastName" class="@input_class" />
                <span asp-validation-for="LastName" class="text-red-500"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="@label_class"></label>
                <input asp-for="Email" class="@input_class" />
                <span asp-validation-for="Email" class="text-red-500"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="@label_class"></label>
                <input asp-for="Password" class="@input_class" />
                <span asp-validation-for="Password" class="text-red-500"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="@label_class"></label>
                <input asp-for="ConfirmPassword" class="@input_class" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500"></span>
            </div>
            <div class="my-4">
                <button type="submit" class="inline-flex justify-center items-center py-2 px-6 w-1/2 text-sm font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
